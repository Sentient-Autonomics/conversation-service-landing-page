---
// Stats component
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-6 max-w-6xl">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="text-center space-y-2 animate-fade-in">
        <div class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-accent-lime to-accent-green">
          96%
        </div>
        <div class="text-sm text-gray-600 font-medium">Cost Reduction</div>
        <div class="text-xs text-gray-500">vs. Industry Standard</div>
      </div>
      
      <div class="text-center space-y-2 animate-fade-in" style="animation-delay: 0.1s;">
        <div class="text-4xl md:text-5xl font-bold text-purple-600 relative group cursor-help">
          &lt;200ms
          <span class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
            To be tested
          </span>
        </div>
        <div class="text-sm text-gray-600 font-medium">Response Time</div>
        <div class="text-xs text-gray-500">Sub-Second Routing</div>
      </div>
      
      <div class="text-center space-y-2 animate-fade-in" style="animation-delay: 0.2s;">
        <div class="text-4xl md:text-5xl font-bold text-purple-600 relative group cursor-help">
          90%+
          <span class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
            To be improved
          </span>
        </div>
        <div class="text-sm text-gray-600 font-medium">Accuracy</div>
        <div class="text-xs text-gray-500">Target Achievement</div>
      </div>
      
      <div class="text-center space-y-2 animate-fade-in" style="animation-delay: 0.3s;">
        <div class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-accent-lime to-accent-green">
          100%
        </div>
        <div class="text-sm text-gray-600 font-medium">Compliant</div>
        <div class="text-xs text-gray-500">Full Audit Trail</div>
      </div>
    </div>
  </div>
</section>